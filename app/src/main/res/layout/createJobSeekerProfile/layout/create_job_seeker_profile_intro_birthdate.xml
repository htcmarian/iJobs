<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/create_job_seeker_profile_nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:onClick="onNextButtonClick"
        android:text="@string/create_job_seeker_profile_nextButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/create_job_seeker_profile_nameInput"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/create_job_seeker_profile_nameInput"
        app:layout_constraintTop_toBottomOf="@+id/create_job_seeker_profile_nameInput" />

    <EditText
        android:id="@+id/create_job_seeker_profile_birthDateInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/create_job_seeker_profile_birthdatePlaceholder"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/create_job_seeker_profile_nameInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/create_job_seeker_profile_nameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/create_job_seeker_profile_namePlaceholder"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/create_job_seeker_profile_nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_job_seeker_profile_birthDateInput" />
</androidx.constraintlayout.widget.ConstraintLayout>