<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/job_recruiter_seeker_profile_picture"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/job_recruiter_seeker_profile_nameTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="252dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:textColor="@color/secondary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <ImageView
                android:id="@+id/job_recruiter_seeker_profile_locationLabel"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:visibility="invisible"
                android:src="@drawable/ic_location_on_secondary_24dp" />

            <TextView
                android:id="@+id/job_recruiter_seeker_profile_locationTextView"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/secondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <ImageView
                android:id="@+id/job_recruiter_seeker_profile_phoneNumberLabel"
                android:layout_width="32dp"
                android:layout_marginLeft="20dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                android:src="@drawable/ic_call_secondary_24dp" />

            <TextView
                android:id="@+id/job_recruiter_seeker_profile_phoneNumberTextView"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:textColor="@color/secondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="invisible"
                android:id="@+id/job_recruiter_seeker_profile_pastJobsLabel"
                android:layout_width="356dp"
                android:layout_marginLeft="20dp"
                android:layout_height="29dp"
                android:text="Job-uri anterioare"
                android:textColor="@color/secondary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/job_recruiter_seeker_profile_pastJobsTextView"
                android:layout_marginLeft="20dp"
                android:layout_width="357dp"
                android:layout_height="61dp"
                android:minLines="4"
                android:textColor="@color/secondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/job_recruiter_seeker_profile_pastExperienceLabel"
                android:layout_marginLeft="20dp"
                android:layout_width="357dp"
                android:layout_height="32dp"
                android:text="Experienta anterioara"
                android:textColor="@color/secondary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/job_recruiter_seeker_profile_pastExperienceTextView"
                android:layout_marginLeft="20dp"
                android:layout_width="359dp"
                android:layout_height="64dp"
                android:maxLines="4"
                android:textColor="@color/secondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/job_recruiter_seeker_profile_skillsLabel"
                android:layout_width="359dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="Skill-uri"
                android:visibility="invisible"
                android:textColor="@color/secondary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/job_recruiter_seeker_profile_skillsTextView"
                android:layout_marginLeft="20dp"
                android:layout_width="358dp"
                android:layout_height="101dp"
                android:textColor="@color/secondary" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/job_recruiter_seeker_profile_loadingSpinner"
            android:indeterminateTint="@color/secondary"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
