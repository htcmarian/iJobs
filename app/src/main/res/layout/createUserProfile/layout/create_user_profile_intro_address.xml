<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/create_user_profile_addressLocationTextInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/create_user_profile_addressFieldPlaceholder"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/create_user_profile_addressPostCodeTextInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/create_user_profile_addressCityTextInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/create_user_profile_addressCityPlaceholder"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/create_user_profile_nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_user_profile_addressPostCodeTextInput" />

    <EditText
        android:id="@+id/create_user_profile_addressPostCodeTextInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/create_user_profile_addressPostCodePlaceholder"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/create_user_profile_addressCityTextInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_user_profile_addressLocationTextInput" />

    <Button
        android:id="@+id/create_user_profile_nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/create_user_profile_nextButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_user_profile_addressCityTextInput" />

</androidx.constraintlayout.widget.ConstraintLayout>